# Core Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Luminous API Configuration
LUMINOUS_API_URL=https://api.luminous.com
LUMINOUS_API_KEY=your-luminous-api-key-here

# Next.js Integration for Magic Link Authentication
# IMPORTANT: SERVICE_SECRET must match the value in Next.js .env.local
NEXTJS_API_URL=https://parceloug.com
SERVICE_SECRET=generate-a-64-char-random-hex-string-here

# Telegram Notifications (Optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
TELEGRAM_NOTIFICATIONS_ENABLED=false

# Phase 3: Memory Configuration
LLM_WINDOW_SIZE=12
LLM_MAX_PROMPT_TOKENS=8000
LLM_OUTPUT_BUFFER_TOKENS=400
SUMMARY_MESSAGE_THRESHOLD=5
SUMMARY_MAX_INPUT_TOKENS=6000
SUMMARY_MAX_OUTPUT_TOKENS=512
EMBEDDINGS_MODEL=text-embedding-3-small
EMBEDDINGS_DIMENSIONS=1536
EMBEDDINGS_CHUNK_SIZE_TOKENS=700
EMBEDDINGS_CHUNK_OVERLAP_TOKENS=140
EMBEDDINGS_MAX_CHUNKS=8
EMBEDDINGS_RECALL_LIMIT=5
EMBEDDINGS_MIN_SIMILARITY=0.75
ENABLE_VECTOR_RECALL=true
SUMMARY_REFRESH_MINUTES=30

# Phase 5: Media Handling
ENABLE_MEDIA_DOWNLOAD=false
ENABLE_VISION_CAPTIONS=false
ENABLE_AUDIO_TRANSCRIPTION=false
MEDIA_STORAGE_BUCKET=chat-media
MEDIA_RETENTION_DAYS=7
MEDIA_CLEANUP_INTERVAL_MINUTES=60
VISION_MODEL=
TRANSCRIPTION_MODEL=

# ============================================================================
# HOW TO GENERATE SERVICE_SECRET:
# ============================================================================
# Using Node.js:
#   node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
#
# Using Python:
#   python3 -c "import secrets; print(secrets.token_hex(32))"
#
# Using OpenSSL:
#   openssl rand -hex 32
#
# ⚠️ CRITICAL: Use the SAME SECRET in both FastAPI and Next.js!
# ============================================================================
